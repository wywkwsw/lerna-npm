{
  "packages": [
    "packages/*"
  ],
  "scripts": {
    "build:rollup": "lerna run build --scope one"
  },
  "version": "independent",
  "command":{
    "publish":{
      "ignoreChanges":["ignored-file","*.md","*.log"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publishConfig": {
      "access": "public"
    }
  }
}
